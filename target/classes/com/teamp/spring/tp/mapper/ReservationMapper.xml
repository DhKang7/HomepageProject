<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.teamp.spring.tp.mapper.ReservationMapper">

    <select id="list" resultType="com.teamp.spring.tp.dto.ReservationDto">
        SELECT * FROM book WHERE B_name = #{B_name}
    </select>

    <delete id="del">
        DELETE FROM book WHERE B_name = #{B_name}
    </delete>

    <insert id="add">
        INSERT INTO book (B_date, B_name, B_hospital_name) VALUES (#{B_date}, #{B_name}, #{B_hospital_name})
    </insert>

    <update id="modify">
        UPDATE book
        SET B_date = #{B_date}
        WHERE B_name = #{B_name}
    </update>

</mapper>
